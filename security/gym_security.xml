<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_gym">
            <field name="name">Gym Management</field>
            <field name="description">Phân quyền quản lý phòng Gym</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_gym_trainer" model="res.groups">
            <field name="name">Trainer (PT)</field>
            </record>

        <record id="group_gym_user" model="res.groups">
            <field name="name">Receptionist</field>
            <field name="implied_ids" eval="[(4, ref('group_gym_trainer'))]"/>
        </record>

        <record id="group_gym_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_gym_user'))]"/>
            </record>
    </data>
</odoo>
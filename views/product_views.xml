<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_gym" model="ir.ui.view">
            <field name="name">product.template.form.gym.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                
                <xpath expr="//notebook" position="inside">
                    
                    <page string="Gym Configuration" name="gym_config">
                        <group>
                            <group>
                                <field name="gym_product_type" widget="radio"/>
                            </group>
                        </group>

                        <group string="Membership Settings" 
                               invisible="gym_product_type != 'membership'">
                            <group>
                                <label for="gym_duration" string="Duration"/>
                                <div class="o_row">
                                    <field name="gym_duration" class="oe_inline"/>
                                    <field name="gym_duration_unit" class="oe_inline" style="margin-left: 5px;"/>
                                </div>
                            </group>
                        </group>

                        <group string="Service Pack Settings" 
                               invisible="gym_product_type != 'service_pack'">
                            <group>
                                <field name="gym_session_count"/>
                                <label for="gym_duration" string="Validity Period"/>
                                <div class="o_row">
                                    <field name="gym_duration" class="oe_inline"/>
                                    <field name="gym_duration_unit" class="oe_inline" style="margin-left: 5px;"/>
                                </div>
                            </group>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//div[@name='options']" position="inside">
                    <span class="d-inline-block">
                        <field name="gym_product_type" readonly="1" invisible="not gym_product_type"/>
                    </span>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_gym_membership_search" model="ir.ui.view">
            <field name="name">gym.membership.search</field>
            <field name="model">gym.membership</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm">
                    <field name="name"/>
                    <field name="partner_id"/>
                </search>
            </field>
        </record>

        <record id="view_gym_membership_list" model="ir.ui.view">
            <field name="name">gym.membership.list</field>
            <field name="model">gym.membership</field>
            <field name="arch" type="xml">
                <list string="Danh sách Thẻ" sample="1">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state" widget="badge" 
                           decoration-success="state == 'active'" 
                           decoration-danger="state == 'expired'"/>
                </list>
            </field>
        </record>

        <record id="view_gym_membership_form" model="ir.ui.view">
            <field name="name">gym.membership.form</field>
            <field name="model">gym.membership</field>
            <field name="arch" type="xml">
                <form string="Thẻ Hội Viên">
                    <header>
                        <button name="action_confirm" string="Kích hoạt" type="object" 
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_freeze" string="Bảo lưu" type="object" 
                                invisible="state != 'active'"/>
                        <button name="action_cancel" string="Hủy" type="object" 
                                invisible="state in ('expired', 'cancelled')"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="product_id"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_gym_membership" model="ir.actions.act_window">
            <field name="name">Thẻ Hội Viên</field>
            <field name="res_model">gym.membership</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo thẻ mới
                </p>
            </field>
        </record>
    </data>
</odoo>